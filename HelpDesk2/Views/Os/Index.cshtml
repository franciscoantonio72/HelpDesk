@model IEnumerable<HelpDesk2.Models.Os>

@{
    ViewBag.Title = "Index";
    ViewBag.TituloPanel = "Ordem de Serviço";
}

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table id="tabela" class="table table-striped">
    <tr>
        <th>
            Id
        </th>
        <th>
            Cliente
        </th>
        <th>
            Status
        </th>
        <th>
            Tecnico
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prioridades)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tecnico.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td id="id_prioridade">
                @Html.DisplayFor(modelItem => item.Prioridades)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-info glyphicon glyphicon-pencil" })
                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-info glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
